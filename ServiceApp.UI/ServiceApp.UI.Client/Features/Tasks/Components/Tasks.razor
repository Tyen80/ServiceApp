@page "/tasks"
@inject ITaskToDoService TaskToDoService
@rendermode InteractiveAuto


<div class="container-xxl">
    <div class="d-flex justify-content-center align-items-center mt-3">
        <h3>Oppgaver</h3>
    </div>
    @if (tasks != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in tasks)
                {
                    <tr>
                        <td>
                            <a href="tasks/create/@task.Id">@task.Title</a>
                        </td>
                        <td>@task.Description</td>
                        <td>@task.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p><em>Loading...</em></p>
    }
</div>
@code {
    private List<TaskToDoResponse> tasks = new();

    protected override async Task OnInitializedAsync()
    {
        tasks = await TaskToDoService.GetAllTaskByUserId();
    }
}